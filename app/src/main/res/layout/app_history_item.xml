<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingRight="10dp"
    >

  <ImageView
      android:id="@+id/app_history_list_icon"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:src="@drawable/holmes_icon"
      />

  <LinearLayout
      android:layout_width="0px"
      android:layout_height="wrap_content"
      android:layout_weight="1.0"
      android:orientation="vertical"
      >

    <TextView
        android:id="@+id/app_history_list_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:text="App Tracker"
        android:textSize="16sp"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/app_history_list_subtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:text="com.nolanlawson.apptracker"
        android:textSize="14sp"
        android:visibility="gone"
        />

  </LinearLayout>

  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      >

    <TextView
        android:id="@+id/app_history_list_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5 mins ago"
        android:textSize="16sp"
        />

    <CheckBox
        android:id="@+id/app_history_list_check_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:visibility="gone"
        />

  </LinearLayout>

</LinearLayout>
